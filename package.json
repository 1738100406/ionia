{
  "name": "root",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs"
  ],
  "scripts": {
    "postinstall": "yarn libs",
    "libs": "yarn w @ionia/libs build",
    "prestart": "yarn libs",
    "start": "run-p start:*",
    "start:master": "yarn w @ionia/master start",
    "start:dashboard": "yarn w @ionia/dashboard start",
    "start:cms": "yarn w @ionia/cms start",
    "start:user": "yarn w @ionia/user start",
    "start:auth": "yarn w @ionia/auth start",
    "prebuild": "yarn libs",
    "build": "run-p build:*",
    "build:master": "yarn w @ionia/master build:prod",
    "build:dashboard": "yarn w @ionia/dashboard build:prod",
    "build:cms": "yarn w @ionia/cms build:prod",
    "build:user": "yarn w @ionia/user build:prod",
    "build:auth": "yarn w @ionia/auth build:prod",
    "w": "yarn workspace",
    "ws": "yarn workspaces",
    "cz": "git-cz"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.2.0",
    "npm-run-all": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
