{
  "name": "root",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs"
  ],
  "scripts": {
    "libs:dev": "yarn w @ionia/libs start",
    "libs:build": "yarn w @ionia/libs build",
    "prestart": "yarn libs:build",
    "start": "run-p start:*",
    "start:master": "yarn w @ionia/master start",
    "start:dashboard": "yarn w @ionia/dashboard start",
    "start:hero": "yarn w @ionia/hero start",
    "start:auth": "yarn w @ionia/auth start",
    "prebuild": "yarn libs:build",
    "build": "run-p build:*",
    "build:master": "yarn w @ionia/master build:prod",
    "build:dashboard": "yarn w @ionia/dashboard build:prod",
    "build:hero": "yarn w @ionia/hero build:prod",
    "build:auth": "yarn w @ionia/auth build:prod",
    "prepreview": "yarn build",
    "preview": "run-p preview:*",
    "preview:master": "yarn w @ionia/master preview",
    "preview:dashboard": "yarn w @ionia/dashboard preview",
    "preview:hero": "yarn w @ionia/hero preview",
    "preview:auth": "yarn w @ionia/auth preview",
    "w": "yarn workspace",
    "ws": "yarn workspaces",
    "cz": "git-cz"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.2.0",
    "npm-run-all": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
